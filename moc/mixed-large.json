{% set flavor_name = flavor_name or "m1.tiny" %}
{% set volume_type = volume_type or "" %}

{
  "NovaServers.mixed_complex_workload_one": [
    {
      "runner": {
        "type": "constant",
        "concurrency": 50,
        "times": 50
      },
      "args": {
        "count": 2,
        "min_sleep": 2,
        "max_sleep": 15,
        "image": {
          "name": "cirros-0.3.4-x86_64-uec"
        },
        "flavor": {
          "name": "{{flavor_name}}"
        },
        "volume_size": 5,
        "volume_type": "{{volume_type}}",
        "force_delete": true,
        "actions": [
                    {"hard_reboot": 1},
                    {"soft_reboot": 1},
                    {"stop_start": 1},
                    {"rescue_unrescue": 1}
        ]
      },
      "context": {
        "users": {
          "users_per_tenant": 1,
          "tenants": 100
        }
      },
      "sla": {
         "failure_rate": {
           "max": 0
         }
      }
    }
  ]
}
