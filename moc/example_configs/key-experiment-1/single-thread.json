{% set volume_type = volume_type or "" %}
{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = image_name or "cirros-0.3.4-x86_64-uec" or "^cirros.*-disk$" %}

{
  "NovaServers.mixed_complex_workload_two": [
    {
      "runner": {
        "type": "constant",
        "concurrency": 1,
        "times": 100
      },
      "args": {
        "count": 1,
        "image": {
          "name": "{{image_name}}"
        },
        "flavor": {
          "name": "{{flavor_name}}"
        },
        "to_flavor": {
          "name": "m1.small"
        },
        "volume_size": 10,
        "volume_type": "{{volume_type}}",
        "boot_server_kwargs": {},
        "create_volume_kwargs": {},
        "force_delete": false,
        "actions": [
                    {"hard_reboot": 1},
                    {"soft_reboot": 1},
                    {"stop_start": 1},
                    {"rescue_unrescue": 1}
        ]
      },
      "context": {
        "users": {
          "users_per_tenant": 1,
          "tenants": 30
        }
      },
      "sla": {
         "failure_rate": {
           "max": 0
         }
      }
    }
  ]
}


